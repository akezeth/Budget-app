<div class="navigation">
  <ul>
    <li><%= link_to image_tag('backarrow.png', alt: 'Back'), category_path(params[:category_id]), class: 'nav-link' %></li>
    <h2>Transaction: <%= @transaction.name %></h2>
    <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
  </ul>
</div>
<div class="transaction-container">
  <div class="transaction-heading">
    <p><%= @transaction.name %></p>
    <p><strong>Amount:</strong> <%= @transaction.amount %></p>
  </div>
  <div class="transaction-details">
    <h2>Categories:</h2>
    <ul>
      <% @transaction.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>
    <p><strong>Created At:</strong> <%= @transaction.created_at.strftime('%B %d, %Y %I:%M %p') %></p>
  </div>
</div>
